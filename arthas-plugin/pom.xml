<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.ly1806620741</groupId>
        <artifactId>arthas-plugin-parent</artifactId>
        <version>0.0.1</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>arthas-plugin</artifactId>
    <name>arthas-plugin</name>
    <url>https://github.com/LY1806620741/arthas-plugin</url>

    <properties>
        <final.jar.name>arthas-core.jar</final.jar.name>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.alibaba.middleware</groupId>
            <artifactId>cli</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.taobao.arthas</groupId>
            <artifactId>arthas-core</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.taobao.arthas</groupId>
            <artifactId>arthas-model</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.alibaba.arthas</groupId>
            <artifactId>arthas-repackage-logger</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- 下载arthas-core.jar + 用项目class覆盖 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <!-- 自动下载官方原生arthas-core-4.1.4.jar到target目录 -->
                    <execution>
                        <id>copy-arthas-core</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.taobao.arthas</groupId>
                                    <artifactId>arthas-core</artifactId>
                                    <version>${arthas.version}</version>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <destFileName>${final.jar.name}</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <!-- 用项目编译后的class覆盖下载的arthas-core.jar -->
                    <execution>
                        <id>update-arthas-core-with-classes</id>
                        <phase>package</phase>
                        <goals>
                            <goal>properties</goal>
                        </goals>
                        <configuration>
                            <executions>
                                <execution>
                                    <id>jar-update</id>
                                    <phase>package</phase>
                                    <goals>
                                        <goal>exec</goal>
                                    </goals>
                                    <configuration>
                                        <executable>jar</executable>
                                        <arguments>
                                            <argument>-uf</argument>
                                            <argument>${project.build.directory}/${final.jar.name}</argument>
                                            <argument>-C</argument>
                                            <argument>${project.build.outputDirectory}</argument>
                                            <argument>.</argument>
                                        </arguments>
                                    </configuration>
                                </execution>
                            </executions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>